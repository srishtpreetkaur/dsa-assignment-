#include <stdio.h>

int main() {
    int n;

    // Input array size
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];

    // Input array elements
    printf("Enter %d elements: ", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Assume first element is minimum
    int min = arr[0];

    // Traverse the array to find the minimum
    for (int i = 1; i < n; i++) {
        if (arr[i] < min) {
            min = arr[i];
        }
    }

    // Output the minimum value
    printf("Minimum value in the array is: %d\n", min);

    return 0;
}


##
Output:Enter number of elements: 5
Enter 5 elements: 3 8 -2 7 5
Minimum value in the array is: -2
