#include <stdio.h>

int main() {
    int n;

    // Step 1: Input array size
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr[n];

    // Step 2: Input array elements
    printf("Enter %d elements: ", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Step 3: Initialize min with first element
    int min = arr[0];

    // Step 4: Loop through the array to find the minimum
    for (int i = 1; i < n; i++) {
        if (arr[i] < min) {
            min = arr[i];
        }
    }

    // Step 5: Display result
    printf("The minimum value in the array is: %d\n", min);

    return 0;
}


##
Output:Enter the number of elements: 5
Enter 5 elements: 10 4 8 -2 7
The minimum value in the array is: -2
