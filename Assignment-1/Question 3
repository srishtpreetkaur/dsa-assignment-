#include <stdio.h>
#include <limits.h> // for INT_MAX

int main() {
    int n;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];

    printf("Enter %d elements: ", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    if (n < 2) {
        printf("Array must have at least two elements.\n");
        return 0;
    }

    int min1 = INT_MAX;  // smallest
    int min2 = INT_MAX;  // second smallest

    for (int i = 0; i < n; i++) {
        if (arr[i] < min1) {
            // update both
            min2 = min1;
            min1 = arr[i];
        } else if (arr[i] > min1 && arr[i] < min2) {
            // update only second smallest
            min2 = arr[i];
        }
    }

    if (min2 == INT_MAX) {
        printf("No distinct second minimum value found (all elements are equal).\n");
    } else {
        printf("Second minimum value is: %d\n", min2);
    }

    return 0;
}

##
Output:
Enter number of elements: 5
Enter 5 elements: 4 1 7 3 1
Second minimum value is: 3
