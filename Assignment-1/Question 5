#include <stdio.h>

int main() {
    int matrix[4][4];

    printf("Enter elements of 4x4 matrix:\n");

    // Input 4x4 matrix
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    printf("\nMatrix elements with their positions:\n");

    // Display each element with its position
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            printf("Element at position (%d,%d): %d\n", i, j, matrix[i][j]);
        }
    }

    return 0;
}



#output
Matrix elements with their positions:
Element at position (0,0): 1
Element at position (0,1): 2
Element at position (0,2): 3
Element at position (0,3): 4
Element at position (1,0): 5
Element at position (1,1): 6
Element at position (1,2): 7
Element at position (1,3): 8
Element at position (2,0): 9
Element at position (2,1): 10
Element at position (2,2): 11
Element at position (2,3): 12
Element at position (3,0): 13
Element at position (3,1): 14
Element at position (3,2): 15
Element at position (3,3): 16
